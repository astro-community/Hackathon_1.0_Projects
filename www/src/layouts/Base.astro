---
import AstroLogo from '../components/AstroLogo.astro';
import '../styles/base.css';

export interface Props {
  title?: string;
}

const { title = 'Astro Hackathon Showcase' } = Astro.props as Props;
---
<html lang="en" class="h-full bg-base-200">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
	</head>
	<body class="space-y-12 py-12 lg:py-24">
    <header class="container mx-auto px-3 text-center">
		  <h1 class="text-4xl"><AstroLogo size="60"/> {title}</h1>
	  </header>
	  <main class="space-y-12">
      <slot/>
    </main>
  </body>
</html>