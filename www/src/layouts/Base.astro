---
import AstroLogo from '../components/AstroLogo.astro';
import { screenshotUrl } from '../scripts/screenshotAPI';
import '../styles/base.css';

export interface Props {
  title?: string;
}

const { title } = Astro.props as Props;
const siteName = 'Astro Hackathon Showcase'
const ogImageSrc = screenshotUrl(Astro.canonicalURL.href);
const ogImageAlt = `Screenshot of ‚Äú${title}‚Äù page on ${siteName}`;
---
<html lang="en" class="h-full bg-base-200 bg-gradient-to-br from-base-200 to-base-300 bg-fixed">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title} üöÄ {siteName}</title>
		
		<link rel="canonical" href={Astro.canonicalURL.href}>
		
		<meta property="og:title" content={title ?? siteName} />
		<meta property="og:type" content="article" />
		<meta property="og:url" content={Astro.canonicalURL.href} />
		<meta property="og:locale" content="en" />
		<meta property="og:site_name" content={siteName} />
		<meta property="og:image" content={ogImageSrc} />
		<meta property="og:image:alt" content={ogImageAlt} />

		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:site" content="aFuzzyBear2" />
		<meta property="twitter:title" content={title ?? siteName} />
		<meta name="twitter:image" content={ogImageSrc} />
		<meta name="twitter:image:alt" content={ogImageAlt} />
	</head>
	<body class="space-y-12 pt-6 pb-24 lg:pt-12">
    <header class="container mx-auto px-3 text-center text-2xl lg:text-3xl lg:font-light">
		  <a href="/">Astro Hackathon Showcase</a>
	  </header>
		<div class="divider">
			<span class="inline-block rounded-full p-3 bg-neutral-focus dark:bg-transparent">
				<AstroLogo size="40" />
			</span>
		</div>
	  <main class="space-y-12">
      <slot/>
    </main>
  </body>
</html>